
<%content_for :title, 'beam-e-up | First Login'%>
<%content_for :keywords, 'first login' %>
<%content_for :description, 'welcome to beam-e-up' %>

<script type="text/javascript">
    $(document).ready(function(){
        $("form select, input:checkbox, input:radio, input:file").uniform();
    });

</script>



        <div class="content">
            <div class="panel" style="width:600px; margin:0 auto;">
                <div class="head">Welcome</div>
                <div class="inside textAlignCenter">
                    Hello, <strong><%=  current_user.username%></strong>,<br />
                  Thank you for signing in to beam-e-up!<br /><br />
                    Would you like to:<br /><br />

                    <% if current_user.role_id==Role::ADMIN_USER_ID   %>
                      <%= render 'home/shared/adminlinks' %>
                  <% else %>
                      <%= render 'home/shared/retailerlinks' %>
                  <% end %>
                
                </div>
            </div>
        </div>

